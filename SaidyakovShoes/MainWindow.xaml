<Window x:Class="SaidyakovShoes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaidyakovShoes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Times New Roman" Icon="/img/Icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="/img/Icon.png" HorizontalAlignment="Left"/>
        <TextBlock Text="Shoes" HorizontalAlignment="Center" FontSize="24" VerticalAlignment="Center"></TextBlock>

        <Button Name="BtnBack" Content="Назад" Click="BtnBack_Click" Background="#FF04A0FF" VerticalAlignment="Center" HorizontalAlignment="Right"/>

        <Frame Name="FrameBase" NavigationUIVisibility="Hidden" ContentRendered="FrameBase_ContentRendered" Grid.Row="1"></Frame>
    </Grid>
</Window>
