<Page x:Class="SaidyakovShoes.PageProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SaidyakovShoes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageProducts" FontFamily="Times New Roman">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Grid.Row="0">
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Поиск" FontSize="15"/>
                <TextBox Name="TextBoxSearch" TextChanged="TextBoxSearch_TextChanged" Width="200" FontSize="15"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Фильтр по поставщику" FontSize="15"/>
                <ComboBox Name="ComboBoxFilter" SelectionChanged="ComboBoxFilter_SelectionChanged" FontSize="15" Width="150" Background="Transparent">
                    <TextBlock>Все поставщики</TextBlock>
                    <TextBlock>Kari</TextBlock>
                    <TextBlock>Обувь для вас</TextBlock>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Bottom">
                <ComboBox Name="ComboBoxSorter" SelectionChanged="ComboBoxSorter_SelectionChanged" FontSize="15" Width="200">
                    <TextBlock>Без сортировки</TextBlock>
                    <TextBlock>По возрастанию стоимости</TextBlock>
                    <TextBlock>По убыванию стоимости</TextBlock>
                </ComboBox>
            </StackPanel>
        </StackPanel>


        <ListView Name="listViewProducts" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Grid Background="{Binding DiscountColor}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"></ColumnDefinition>
                                <ColumnDefinition Width="800"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0" Margin="20, 10, 10, 10">
                                <Image HorizontalAlignment="Center">
                                    <Image.Source>
                                        <Binding Path="ProductPhoto">
                                            <Binding.TargetNullValue>
                                                <ImageSource>
                                                    /img/Icon.png
                                                </ImageSource>
                                            </Binding.TargetNullValue>
                                        </Binding>
                                    </Image.Source>
                                </Image>
                            </Border>

                            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" Margin="0, 10, 10, 10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Text="{Binding ProductCategory}" FontSize="20"></TextBlock>
                                        <TextBlock Text=" | " FontSize="20"></TextBlock>
                                        <TextBlock Text="{Binding ProductName}" FontSize="20"></TextBlock>
                                    </StackPanel>

                                    <TextBlock Text="{Binding ProductDescription, StringFormat = Описание товара: {0}}" FontSize="20" Grid.Row="1"/>
                                    <TextBlock Text="{Binding ProductManufacturer, StringFormat= Производитель: {0}}" FontSize="20" Grid.Row="2"/>
                                    <TextBlock Text="{Binding ProductImporter, StringFormat= Поставщик: {0}}"  FontSize="20" Grid.Row="3"/>

                                    <StackPanel Name="StackPanelProductCosts" Grid.Row="4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Цена: " FontSize="20" Grid.Column="0" Grid.Row="0"/>
                                            <TextBlock Text="{Binding ProductCost}" Grid.Column="1" Grid.Row="0" FontSize="20" Margin="0,0,10,0" Foreground="{Binding CostColorForOrinal}"/>
                                            <TextBlock Text="{Binding ProductCost}" Grid.Column="1" Grid.Row="0" FontSize="20" Margin="0,0,10,0" TextDecorations="Strikethrough" Foreground="{Binding CostColorForCopy}"/>
                                            <TextBlock Text="{Binding ProductCostWithDiscount}" Grid.Column="2" Grid.Row="0" FontSize="20"/>
                                        </Grid>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding ProductUnit, StringFormat= Единица измерения: {0}}" FontSize="20" Grid.Row="5"/>
                                    <TextBlock Name="TextBlockProductQuantityInStock" Text="{Binding ProductQuantityInStock, StringFormat= Количество на складе: {0}}" FontSize="20" Grid.Row="6"/>
                                </Grid>
                            </Border>

                            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2" Margin="0, 10, 10, 10">
                                <TextBlock Text="{Binding ProductDiscountAmount, StringFormat= Скидка: {0}%}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
